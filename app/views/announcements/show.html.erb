<p style="color: green"><%= notice %></p>
<%= link_to "Back to list", announcements_path %>

<div id="<%= dom_id @announcement %>">
  <%= render @announcement %>
</div>

<% if user_signed_in? && @user.is_admin == true %>
  <div class="actions">
    <%= link_to("Edit", edit_announcement_path(@announcement)) %>
    <%= link_to("Delete", delete_announcement_path(@announcement))%>
  </div>
<% end %>

<h2> <%= link_to 'Back to Dashboard', dashboard_index_path %> </h2>
