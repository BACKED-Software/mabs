<% content_for(:title, 'Delete Announcement') %>
<div class="container mt-4 mb-3">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h1>Delete Announcement</h1>
        </div>
        <div class="card-body">
          <%= form_for(@announcement, method: 'delete') do |f| %>

            <p>Are you sure you want to permanently delete this announcement?</p>

            <div id="<%= dom_id @announcement %>" class="announcement-details">
              <%= render @announcement %>
            </div>

            <div class="form-buttons">
              <%= f.submit("Delete Announcement", class: "btn btn-danger") %>
            </div>

          <% end %>
        </div>

        <div class="card-footer">
          <%= link_to "Back to announcement", announcements_path(@announcement), class: "btn btn-outline-secondary" %>
        </div>
      </div>

    </div>
  </div>
</div>
