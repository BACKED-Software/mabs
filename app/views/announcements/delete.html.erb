<%= link_to("Back to List", announcements_path) %>

<div class="announcements delete">
  <h2>Delete Announcement</h2>

  <%= form_for(@announcement, method: 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this announcement?</p>
    <p><%= @announcement.announcementID %></p>

    <div class="form-buttons">
      <%= f.submit("Delete announcement") %>
    </div>

  <% end %>
</div>
