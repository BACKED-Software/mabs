<h1>Listing Points</h1>

<table>
  <thead>
  <tr>
    <th>Points Awarded</th>
    <th>Awarded By</th>
    <th>Date of Award</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @points.each do |point| %>
    <tr>
      <td><%= point.numPointsAwarded %></td>
      <td><%= point.awardedBy %></td>
      <td><%= point.dateOfAward %></td>
      <td><%= point.awardDescription %></td>
      <td>
        <%= link_to 'Show', point_path(point) %>
        <%= link_to 'Edit', edit_point_path(point) %>
        <%= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Point', new_point_path %>
