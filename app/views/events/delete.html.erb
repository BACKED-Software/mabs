<%= link_to("Back to List", events_path) %>

<div class="events delete">
  <h2>Delete Event</h2>

  <%= form_for(@event, method: 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this event?</p>
    <p><%= @event.eventName %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Event") %>
    </div>

  <% end %>
</div>
