<body><!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
  <style>
      body {
          padding-top: 56px; /* Padding for fixed navbar */
          background-color: #f0f2f5; /* Light background to ease the eye */
      }
      .navbar-bg {
          background-color: #500000; /* Vibrant blue background for navbar */
          box-shadow: 0 2px 4px rgba(0,0,0,.1); /* Subtle shadow for depth */
      }
      .navbar-brand, .nav-link, .btn-outline-success {
          color: #fff !important; /* White text for better contrast */
      }
      .card {
          box-shadow: 0 2px 4px rgba(0,0,0,.1); /* Consistent shadow for cards */
      }
      .card-header h3 {
          margin-bottom: 0; /* Adjust if necessary */
      }
      .card-header {
          background-color: #500000; /* Matching the navbar color */
          color: #fff; /* White text for header */
      }
      .card-body {
          background-color: #ffffff; /* White background for content */
      }
      .events-container {
          max-width: 100%;
          background-color: #ffffff;
          border-radius: 8px;
          box-shadow: 0 2px 5px rgba(0,0,0,.1);
      }

      .event-date {
          font-size: 16px;
      }

      .event-details {
          border-left: 4px solid #007bff;
          padding-left: 15px;
      }

      .event-title {
          font-size: 18px;
          margin-bottom: 5px;
      }

      .event-time, .event-location {
          font-size: 14px;
      }

  </style>
</head>
<body>
<nav class="navbar navbar-expand-md navbar-light fixed-top navbar-bg">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">MABS</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Dashboard</a>
        </li>
        <!-- Add more navigation items here -->
      </ul>
      <a>
        <div class="d-flex align-items-center justify-content-center bg-secondary text-light rounded-circle" style="width: 40px; height: 40px;">
          <p class="mb-0 fs-6">JA</p>
        </div>
      </a>
    </div>
  </div>
</nav>


<div class="container mt-5">
  <div class="ps-5">
    <h1>Good Morning, Joe</h1>
    <p class="lead">Welcome to your dashboard</p>
  </div>
  <div class="events-container bg-white rounded shadow-lg p-4">
    <h4 class="mb-4">Upcoming Events</h4>
    <ul class="list-unstyled">
      <% @events.sort_by(&:eventTime).each do |event| %>
        <li class="mb-3">
          <div class="event-date text-primary mb-1">
            <strong><%= event.eventTime.strftime("%A, %B %-d") %></strong>
          </div>
          <div class="event-details">
            <h5 class="event-title mb-1"><%= event.eventName %></h5>
            <p class="event-time text-muted mb-0"><%= event.eventTime.strftime("%H:%M") %></p>
            <p class="event-location text-muted"><%= event.eventLocation %></p>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
